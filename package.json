{
  "name": "cloud-functions-typescript-template",
  "version": "0.0.1",
  "private": true,
  "main": "build/app.js",
  "scripts": {
    "start": "functions-framework --target=helloWorld",
    "watch": "concurrently \"tsc -w\" \"nodemon --watch ./build/ --exec npm run start\"",
    "build": "tsc -p .",
    "deploy": "npm run build && gcloud functions deploy hello-world --env-vars-file .env.yaml --entry-point=helloWorld --runtime nodejs12 --trigger-http"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.7",
    "@types/express": "^4.17.9",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^1.7.1"
  }
}
